{% extends 'page.jinja' %}

{% block content %}
  <form method="post" action="">

    <div class="form-group">
      <label for="group-name">Group Name</label>
      <input type="text" class="form-control" name="group-name" id="group-name" required placeholder="Group Name">
    </div>

    <div class="form-group">
      <label for="secret">Token Secret</label>
      <input type="text" class="form-control" name="secret" id="secret" required value="{{ initial_key }}">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
{% endblock %}
